---
import Title from "./Title/Title.astro";
import List from "./List/List.astro";
import ItemList from "./List/ItemList.astro";
import Container from "../layouts/Container.astro";
const { bg } = Astro.props;
---

<footer
    style={{
        background: bg ? bg : "var(--red-color)",
    }}
>
    <Container>
        <section class="gridFooter">
            <article class="item__footer">
                <Title level="h3" label="Alma De Fuego" width="100%" />
                <List>
                    <ItemList label="Accede al catálogo" />
                    <ItemList label="Nuevo usuario" />
                </List>
            </article>
            <article class="item__footer">
                <Title level="h3" label="INFORMACIÓN LEGAL" width="100%" />
                <List>
                    <ItemList label="Aviso legal" />
                    <ItemList label="Política de cookies" />
                    <ItemList label="Ley de protección de datos" />
                    <ItemList label="Condiciones de venta" />
                </List>
            </article>
            <article class="item__footer">
                <Title level="h3" label="CONTACTO" width="100%" />
                <List>
                    <ItemList label="Avda. De Los Altos Montes" />
                    <ItemList label="72235674963869751" />
                    <ItemList label="357987258" />
                    <ItemList label="hola@estrellascatalanas.com" />
                </List>
            </article>
        </section>
    </Container>
</footer>
<style>
    .gridFooter {
        display: flex;
        flex-flow: row wrap;
        gap: 1em;
    }
    .item__footer {
        flex-grow: 2;
        flex-basis: 18rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: snow;
        padding: 30px 1rem;
        gap: 0.5rem;
    }
</style>
